<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         name="CM1"
         updateCheck="false"
         maxBytesLocalHeap="16M">

    <!--
      This is a default configuration, it is re-configured by the CacheConfiguration Spring Bean, using the
      properties from the resources/config/*.yml files.
    -->

    <diskStore path="java.io.tmpdir"/>

    <defaultCache
            eternal="false"
            overflowToDisk="false"
            />

    <cache name="org.jhipster.health.domain.User"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.jhipster.health.domain.Authority"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.jhipster.health.domain.User.authorities"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.jhipster.health.domain.PersistentToken"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.jhipster.health.domain.User.persistentTokens"
           timeToLiveSeconds="3600">
    </cache>
    
    <cache name="org.jhipster.health.domain.Region"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.jhipster.health.domain.Country"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.jhipster.health.domain.Location"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.jhipster.health.domain.Department"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.jhipster.health.domain.Department.employees"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.jhipster.health.domain.Task"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.jhipster.health.domain.Task.jobs"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.jhipster.health.domain.Employee"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.jhipster.health.domain.Employee.jobs"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.jhipster.health.domain.Job"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.jhipster.health.domain.Job.tasks"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.jhipster.health.domain.JobHistory"
        timeToLiveSeconds="3600">
    </cache>

    <!-- jhipster-needle-ehcache-add-entry -->
</ehcache>
