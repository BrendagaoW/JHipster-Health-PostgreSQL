<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity Entry.
    -->
    <changeSet id="20161112000328-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="goal_id"
                                 baseTableName="entry"
                                 constraintName="fk_entry_goal_id"
                                 referencedColumnNames="id"
                                 referencedTableName="goal"/>

        <addForeignKeyConstraint baseColumnNames="entries_id"
                                 baseTableName="entry_metric"
                                 constraintName="fk_entry_metric_entries_id"
                                 referencedColumnNames="id"
                                 referencedTableName="entry"/>
        <addForeignKeyConstraint baseColumnNames="metrics_id"
                                 baseTableName="entry_metric"
                                 constraintName="fk_entry_metric_metrics_id"
                                 referencedColumnNames="id"
                                 referencedTableName="metric"/>
        
    </changeSet>
</databaseChangeLog>
